<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://robobinding.org/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:error="{textError}">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="test"
            bind:text="${text}" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:error="{numberError}">
        <EditText
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Herpderp"
            bind:text="${number}" />
    </android.support.design.widget.TextInputLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bind:checked="${more}" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:visibility="{more}"
        bind:error="{text2Error}">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Herpderp"
            bind:text="${text2}"
            bind:visibility="{more}"/>
    </android.support.design.widget.TextInputLayout>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bind:source="{testList}"
        bind:itemLayout="@layout/testspinner_row"
        bind:dropdownLayout="@layout/testspinner_row"
        bind:onItemSelected="testListSelected" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        bind:source="{testList2}"
        bind:itemLayout="@layout/testlistview_row"
        bind:onItemSelected="testList2Selected"
        bind:emptyViewLayout="@layout/empty" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        bind:visibility="{goodItemFromSpinnerSelected}" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:text="{text}" />

</LinearLayout>
